import java.util.Scanner;

public class Main {
  public static void main(String[] args) 
  {
    Scanner input = new Scanner (System.in);
    System.out.print("Type in a quote from an author: ");
    String quote = input.next();
    System.out.print("Who is the author?: ");
    String author = input.next();
    input.close();
    System.out.println();
    System.out.println("\n"+author+" said "+quote);
  }
}
